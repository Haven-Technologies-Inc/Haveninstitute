# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=haven_institute
DB_USER=haven_user
DB_PASSWORD=secure_password_change_me
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRO_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_PRO_YEARLY_PRICE_ID=price_xxxxx
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_xxxxx

# OpenAI Configuration
OPENAI_API_KEY=sk-xxxxx
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# DeepSeek Configuration (optional)
DEEPSEEK_API_KEY=sk-xxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Email Configuration
ENABLE_EMAIL=true
EMAIL_PROVIDER=zeptomail

# ZeptoMail (Zoho Transactional Email) SMTP Settings
# Production configuration - get credentials from ZeptoMail dashboard
# 
# To set up ZeptoMail:
# 1. Go to https://zeptomail.zoho.com
# 2. Create a Mail Agent for your domain
# 3. Verify your domain (add DNS records)
# 4. Generate an API key/SMTP password from Mail Agent settings
# 5. Use "emailapikey" as ZOHO_SMTP_USER
# 6. Use the generated password as ZOHO_SMTP_PASSWORD
#
ZOHO_SMTP_HOST=smtp.zeptomail.com
ZOHO_SMTP_PORT=465
ZOHO_SMTP_USER=emailapikey
ZOHO_SMTP_PASSWORD=your-zeptomail-api-key-here
ZOHO_FROM_EMAIL=info@havenstudy.com
ZOHO_FROM_NAME=Haven Institute

# Alternative SMTP Settings (set EMAIL_PROVIDER=smtp to use generic SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@haveninstitute.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME=Haven Institute
SMTP_FROM_EMAIL=noreply@haveninstitute.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_change_in_production

# Frontend URLs
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5173/admin
PASSWORD_RESET_URL=http://localhost:5173/reset-password

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_PAYMENTS=true
ENABLE_EMAIL=true

# OAuth Configuration
# Google OAuth (get from Google Cloud Console: https://console.cloud.google.com)
# 1. Create a new project or select existing
# 2. Go to APIs & Services > Credentials
# 3. Create OAuth 2.0 Client ID (Web application)
# 4. Add authorized redirect URIs for your domain
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Apple Sign-In (get from Apple Developer Portal)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=

# MFA Configuration
MFA_ISSUER=Haven Institute
MFA_BACKUP_CODES_COUNT=10

# Security Rate Limiting (stricter limits for sensitive endpoints)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
MFA_RATE_LIMIT_WINDOW_MS=300000
MFA_RATE_LIMIT_MAX_REQUESTS=5
OAUTH_RATE_LIMIT_WINDOW_MS=300000
OAUTH_RATE_LIMIT_MAX_REQUESTS=10

# Account Security
PASSWORD_HISTORY_COUNT=5
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# System Settings Encryption
# 32-character key for encrypting sensitive settings stored in database
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
SETTINGS_ENCRYPTION_KEY=your_32_character_encryption_key
