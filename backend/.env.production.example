# Haven Institute Backend - PRODUCTION Environment Variables
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production to version control

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=production
PORT=3001
API_VERSION=v1

# CORS - List your production domains (comma-separated)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com

# ===========================================
# Database Configuration (REQUIRED)
# ===========================================
DB_HOST=your-production-db-host.com
DB_PORT=3306
DB_NAME=haven_institute_prod
DB_USER=haven_prod_user
DB_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_SSL=true

# ===========================================
# JWT Configuration (REQUIRED - GENERATE STRONG SECRETS)
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING_GENERATED_BY_OPENSSL
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_64_CHAR_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Stripe Configuration (REQUIRED for payments)
# ===========================================
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# ===========================================
# AI Provider Configuration
# ===========================================
AI_PROVIDER=openai
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# DeepSeek (alternative)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Grok/xAI (alternative)
GROK_API_KEY=
XAI_API_KEY=
GROK_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-beta

# ===========================================
# Email Configuration (REQUIRED)
# ===========================================
ENABLE_EMAIL=true
EMAIL_PROVIDER=zeptomail

# ZeptoMail SMTP Settings
ZOHO_SMTP_HOST=smtp.zeptomail.com
ZOHO_SMTP_PORT=465
ZOHO_SMTP_USER=emailapikey
ZOHO_SMTP_PASSWORD=YOUR_ZEPTOMAIL_API_KEY
ZOHO_FROM_EMAIL=noreply@yourdomain.com
ZOHO_FROM_NAME=Haven Institute

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_ROUNDS=12

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300

# ===========================================
# URLs
# ===========================================
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=warn

# ===========================================
# Feature Flags
# ===========================================
ENABLE_AI_CHAT=true
ENABLE_PAYMENTS=true
