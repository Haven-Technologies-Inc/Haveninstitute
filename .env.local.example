# ===========================================
# Haven Institute - Next.js Environment Variables
# Copy this to .env.local and fill in your values
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://haven_user:your_password@localhost:5432/haven_institute?schema=public"

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-32-char-secret-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AI Providers
# OpenAI (primary)
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o

# Grok / xAI (fallback)
GROK_API_KEY=xai-your-grok-key
GROK_API_BASE=https://api.x.ai/v1
GROK_MODEL=grok-3

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Zeptomail (Email via SMTP)
ZEPTOMAIL_HOST=smtp.zeptomail.com
ZEPTOMAIL_PORT=587
ZEPTOMAIL_USER=emailapikey
ZEPTOMAIL_PASSWORD=your-zeptomail-api-key
EMAIL_FROM="Haven Institute <noreply@haveninstitute.com>"

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
