# ===========================================
# Haven Institute - Next.js Environment Variables
# Copy this to .env.local and fill in your values
# ===========================================

# ---------------------------------------------------------------------------
# Database (PostgreSQL) - REQUIRED
# ---------------------------------------------------------------------------
DATABASE_URL="postgresql://haven_user:your_password@localhost:5432/haven_institute?schema=public"

# ---------------------------------------------------------------------------
# NextAuth.js - REQUIRED
# ---------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-32-char-secret-key-here-at-least-32-chars

# ---------------------------------------------------------------------------
# Google OAuth - REQUIRED for social login
# ---------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ---------------------------------------------------------------------------
# Stripe - REQUIRED for payments/subscriptions
# ---------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ---------------------------------------------------------------------------
# AI Providers (at least one required for AI Tutor)
# ---------------------------------------------------------------------------
# OpenAI (primary)
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o

# Grok / xAI (fallback)
GROK_API_KEY=xai-your-grok-key
GROK_API_BASE=https://api.x.ai/v1
GROK_MODEL=grok-3

# ---------------------------------------------------------------------------
# Twilio SMS - Optional (for phone verification & SMS notifications)
# ---------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ---------------------------------------------------------------------------
# Zeptomail Email SMTP - Optional (for transactional emails)
# Falls back to console logging if not configured
# ---------------------------------------------------------------------------
ZEPTOMAIL_HOST=smtp.zeptomail.com
ZEPTOMAIL_PORT=587
ZEPTOMAIL_USER=emailapikey
ZEPTOMAIL_PASSWORD=your-zeptomail-api-key
EMAIL_FROM="Haven Institute <noreply@haveninstitute.com>"

# ---------------------------------------------------------------------------
# App Configuration
# ---------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
NODE_ENV=development

# ---------------------------------------------------------------------------
# Production Deployment (Hetzner)
# ---------------------------------------------------------------------------
# PORT=3000
# HOSTNAME=0.0.0.0

# ---------------------------------------------------------------------------
# SEO & Analytics - OPTIONAL
# ---------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=https://www.havenstudy.com
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code
YANDEX_VERIFICATION=your-yandex-verification-code
